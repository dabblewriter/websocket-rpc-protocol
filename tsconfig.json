{
  "compilerOptions": {
    "target": "es2021",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": [
      "es2021", "DOM"
    ],
    "resolveJsonModule": true,
    "outDir": "./"
  },
  "include": ["src/server.ts", "src/server-single.ts", "src/client.ts"],
  "exclude": ["node_modules"]
}
